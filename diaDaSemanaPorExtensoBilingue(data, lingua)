function diaDaSemanaPorExtensoBilingue(data, lingua) {
  const diasSemanaPt = ["domingo", "segunda-feira", "terça-feira", "quarta-feira", "quinta-feira", "sexta-feira", "sábado"];
  const diasSemanaEn = ["sunday", "monday", "tuesday", "wednesday", "thursday", "friday", "saturday"];
  const diaDaSemana = data.getDay();

  if (lingua === "pt") {
      return diasSemanaPt[diaDaSemana];
  } else if (lingua === "en") {
      return diasSemanaEn[diaDaSemana];
  } else {
      return "Língua não suportada.";
}
}

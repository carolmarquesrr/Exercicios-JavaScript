<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Exercício</title>
</head>
<body>
    <section class="contador">
        <h2 id="valor">0</h2>
        <button id="incrementar">Incrementar</button>
        <button id="decrementar">Decrementar</button>
    </section>
<script>
    const valorTag = document.getElementById("valor");
    const incrementarBtn = document.getElementById("incrementar");
    const decrementarBtn = document.getElementById("decrementar");

    let valor = 0;

    incrementarBtn.addEventListener("click", () => { // o primeiro botao passou glóriaaaaaaaas
    valor++;
    valorTag.textContent = valor;
    });

    decrementarBtn.addEventListener("click", () => {
    valor --;
    valorTag.textContent = valor;
    });
</script>
</body>
</html>

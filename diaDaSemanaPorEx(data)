function diaDaSemanaPorExtenso(data){
   const dia = {
       0: 'domingo',
       1: 'segunda-feira',
       2: 'terça-feira',
       3: 'quarta-feira',
       4: 'quinta-feira',
       5: 'sexta-feira',
       6: 'sábado'};

   return dia [data.getDay()]
} 

console.log(diaDaSemanaPorExtenso(new Date(2022,03,04))); 
